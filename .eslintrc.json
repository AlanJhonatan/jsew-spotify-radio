{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "import/extensions": [2, { "js": "always" }],
    "import/prefer-default-export": ["off"],
    "comma-dangle": [2, "always-multiline"],
    "class-methods-use-this": ["off"]
  }
}
